# Monad 网络部署配置

# 私钥 (不要提交到版本控制)
PRIVATE_KEY=your_private_key_here

# Monad 网络 RPC URLs
MONAD_TESTNET_RPC_URL=https://testnet-rpc.monad.xyz
MONAD_MAINNET_RPC_URL=https://rpc.monad.xyz

# 以太坊测试网 (用于测试)
SEPOLIA_RPC_URL=https://rpc.sepolia.org
ETHERSCAN_API_KEY=your_etherscan_api_key

# Monad 区块浏览器 API Key (如果支持)
MONAD_API_KEY=your_monad_api_key

# 部署配置
GAS_PRICE=1000000000  # 1 Gwei
GAS_LIMIT=8000000

# 合约验证
VERIFY_CONTRACTS=true

# 网络配置
NETWORK_TIMEOUT=60000
CONFIRMATIONS=3

# 费用设置
PLATFORM_FEE=25      # 0.25% in basis points
ESCROW_FEE=50        # 0.5% for escrow services
FEE_RECIPIENT=0x0000000000000000000000000000000000000000

# 安全设置
MAX_GAS_LIMIT=500000
ENABLE_CONTRACT_WHITELIST=true

# 分析设置
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365